<html lang='en'>
  <head>
    <link rel='stylesheet' href='/css/styles.css' />
    <link
      rel='icon'
      type='image/x-icon'
      href='/images/free-30-instagram-stories-icons23_122570.png'
    />
    <title>Petstagram</title>
  </head>
  <body>
    <div>
      <div class='errorContainer'>
        {{#each errors}}
          <p style='margin-bottom: 1rem;'>{{this}}</p>
        {{/each}}
      </div>
    </div>
    <header>
      <nav class='navbar'>
        <div class='container'>
          <div class='logo'>
            <a href='/'>
              <img
                width='50px'
                src='/images/free-30-instagram-stories-icons23_122570.png'
                alt='img1'
              />
            </a>
            <a class='home' href='/'>
              <i>Petstagram</i>
            </a>
          </div>
          <div class='nav-links'>
            <ul class='nav-group'>
              <li class='nav-item'>
                <a href='/photos'>
                  <i>Catalog</i>
                </a>
              </li>
              {{#if isAuth}}
                <li class='nav-item'>
                  <a href='/photos/create'>
                    <i>Add Photo</i>
                  </a>
                </li>
                <li class='nav-item'>
                  <a href='/users/profile'>
                    <i>Profile</i>
                  </a>
                </li>
                <li class='nav-item'>
                  <a href='/users/logout'>
                    <i>Logout</i>
                  </a>
                </li>
              {{else}}
                <li class='nav-item'>
                  <a href='/users/login'>
                    <i>Login</i>
                  </a>
                </li>
                <li class='nav-item'>
                  <a href='/users/register'>
                    <i>Register</i>
                  </a>
                </li>
              {{/if}}
            </ul>
          </div>
        </div>
      </nav>
    </header>
    <main>
      {{{body}}}
    </main>
    <div class='footer'>
      <span class='footer-section'>
        Â© 2023 SoftUni Back-End Exam
      </span>
    </div>
  </body>
</html>