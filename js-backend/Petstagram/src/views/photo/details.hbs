<div class='container'>
  <div class='col-9'>
    <div class='card'>
      <div class='top'>
        <div class='userDetails'>
          <div>
            <div class='profilepic'>
              <div class='profile_img'>
                <div class='image'>
                  <img src='/images/person.png' alt='img8' />
                </div>
              </div>
            </div>
          </div>
          <h3>
            <p>
              {{photo.owner.username}}
            </p>
            <span>{{photo.location}}</span>
            {{#if isOwner}}
              <div class='edit-delete-btns'>
                <a href='/photos/edit/{{photo._id}}'>
                  <img
                    class='edit-img'
                    src='/images/edit-pen-icon-6.jpg'
                    alt='edit button'
                  />
                </a>
                <a href='/photos/delete/{{photo._id}}'>
                  <img
                    class='bin-img'
                    src='/images/icon-remove-22.jpg'
                    alt='bin button'
                  />
                </a>
              </div>
            {{/if}}
          </h3>
        </div>
      </div>
      <div class='imgBx'>
        <img src='{{photo.image}}' alt='post' class='cover' />
      </div>
      <div class='bottom'>
        <p class='message'>
          <b class='petDescription'>{{photo.description}}</b>
        </p>
        <div class='pet-details'>
          <p class='petName'>Name: {{photo.name}}</p>
          <p class='petAge'>Age: {{photo.age}}</p>
        </div>
        <div class='comments'>
          <div class='comments-top'>
            {{#each photo.commentList}}
              <div class='userDetails'>
                <div class='comment-data'>
                  <div class='profilepic'>
                    <div class='profile_img'>
                      <div class='image'>
                        <img src='/images/person.png' alt='img8' />
                      </div>
                    </div>
                  </div>
                  <p><b>{{user.username}}</b> - {{comment}}</p>
                </div>
              </div>
            {{/each}}
          </div>
        </div>
      </div>
      {{#if isLoggedNotOwner}}
        <div class='addComments'>
          <form method='POST' action='/photos/details/{{photo._id}}/comment'>
            <textarea
              id='comment-textarea'
              name='comment'
              cols='40'
              rows='10'
              placeholder='Add comment...'
            ></textarea>
            <input type='hidden' value='{{isOwner}}' name='isOwner' />
            <button type='submit'>Post</button>
          </form>
        </div>
      {{/if}}
    </div>
  </div>
</div>