<main class='login'>
  <section id='login'>
    <div class='form'>
      <h2>Login</h2>
      <form class='login-form' method='POST'>
        <input type='text' name='email' id='email' placeholder='email' />
        <input
          type='password'
          name='password'
          id='password'
          placeholder='password'
        />
        <button type='submit'>Login</button>
        <p class='message'>
          Not registered?
          <a href='/users/register'>Create an account</a>
        </p>
      </form>
    </div>
  </section>
</main>